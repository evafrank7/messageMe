<h4 class="ui center aligned icon header">
  <i class="circular orange coffee icon"></i>
  Say Something...
</h4>

<div class="ui two column stretched grid">
  <div class="row">
    <div class="twelve wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui feed" id="message-container">
            <%= render @messages %>
          </div>
        </div>
        <div class="extra content">
        <%= form_for(@message, html: {class: "ui relpy form", role: "form"}, url: message_path, remote: true) do | f| %>
            <div class="field">
              <div class="ui fluid action input">
                <%= f.text_field :body %>
                <%= f.button '<i type="submit" class="bordered inverted orange edit icon"></i>'.html_safe %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="four wide column center aligned">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui inverted vertical menu">
            <a class="active item">Home</a>
            <a class="item">Messages</a>
            <a class="item">Friends</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>